#sponsors.content
  .pure-g
    %h2.is-center.section-header.pure-u-1 Thank you to our Sponsors!

    .l-box-lrg.pure-u-1
      %h2.is-center.content-head-ribbon Platinum
      %ul.sponsors.gold.pure-g
        {% for sponsor in site.sponsors.platinum %}
        %li.l-box-lrg.pure-u-1.pure-u-md-1-2.pure-u-lg-2-4
          {% if sponsor.website %}
          %a{href: "{{ sponsor.website }}", target: '_blank'}
            %img.pure-img-responsive{src: "images/sponsors/platinum/{{ sponsor.image }}"}/
          {% else %}
          %img.pure-img-responsive{src: "images/sponsors/platinum/{{ sponsor.image }}"}/
          {% endif %}
          .description
            {{ sponsor.description }}
        {% endfor %}

